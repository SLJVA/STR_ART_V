<Window x:Class="STR_ART_V.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Display" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Pixel Count:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0" />

            <TextBox Width="100"
                     VerticalAlignment="Center"
                     Text="{Binding RedPixelCount, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <Button Content="Load Image"
                HorizontalAlignment="Center"
                Margin="0,10,0,10" 
                Padding="10"
                Command="{Binding LoadImageCommand}" />

        <Image Grid.Row="1"
               Stretch="Uniform"
               Source="{Binding ProcessedImage}"/>

    </Grid>
</Window>